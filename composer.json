{
  "type": "library",
  "name": "the-ge/prestashop-xtra",
  "description": "PrestaShop helpers and hacks",
  "authors": [
    {
      "name": "Gabriel Tenita",
      "email": "the.ge.1447624801@tenita.eu"
    }
  ],
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.1.0"
  },
  "autoload": {
    "psr-4": {
      "TheGe\\PrestaShop\\Xtra\\": "src/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "TheGe\\PrestaShop\\XtraTest\\": "tests/src/",
      "PrestaShop\\PrestaShop\\Adapter\\": "tests/mocks/src/Adapter/"
    },
    "classmap": [
      "tests/mocks/classes/"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false
  },
  "scripts": {
    "dev": "composer install --optimize-autoloader && cp index.php ./vendor/index.php",
    "prod": "composer install --no-dev --optimize-autoloader && cp index.php ./vendor/index.php",
    "test": "vendor/bin/phpstan analyse"
  }
}
